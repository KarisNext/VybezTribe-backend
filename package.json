{
  "name": "vybeztribe-backend",
  "version": "1.0.0",
  "description": "VybezTribe Backend API",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "start:production": "NODE_ENV=production node app.js",
    "dev": "nodemon app.js",
    "dev:debug": "nodemon --inspect app.js",
    "debug": "node debug-app.js",
    "setup": "node database/setup.js",
    "setup:production": "NODE_ENV=production node database/setup.js",
    "test": "node -e \"console.log('Server test - All systems go!'); process.exit(0);\"",
    "test:connection": "node -e \"require('./config/db').testConnection().then(console.log).catch(console.error);\"",
    "build": "echo 'Backend build complete - No build step required for Node.js'",
    "clean": "echo 'Cleaning temporary files...' && find . -name '*.log' -delete",
    "install:prod": "npm install --production",
    "postinstall": "echo 'Backend dependencies installed successfully'"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "bcryptjs": "^3.0.2",
    "connect-pg-simple": "^10.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "multer": "^1.4.5-lts.1",
    "pg": "^8.11.3",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "express",
    "api",
    "backend",
    "postgresql",
    "news"
  ],
  "author": "VybezTribe",
  "license": "MIT"
}